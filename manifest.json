{
    "manifest_version": 3,
    "browser_specific_settings": {
        "gecko": {
            "id": "betterdiscutaille@docsystem.xyz",
            "strict_min_version": "42.0"
        }
    },
    "name": "Better Discutaille",
    "version": "1.0",
    "description": "A better version of Discutaille",
    "content_scripts": [{
        "matches": ["https://discutaille.center/*"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": [{
        "resources": ["betterdiscutaille.js", "betterdiscutaille.css", "librairies/*"],
        "matches": ["https://discutaille.center/*"]
    }],
    "icons": {
        "128": "icons/logo.png"
    }
}